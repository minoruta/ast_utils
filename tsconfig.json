{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2017",
        "declaration": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
      "src/**/*",
      "test/**/*.ts"
  ],
  "typedocOptions": {
      "name": "ast_utils",
      "out": "docs",
      "mode": "file",
      "minimal": "minimal",
      "readme": "none",
      "target": "ES2017",
      "includes": "src",
      "excludeNotExported": true,
      "excludePrivate": true,
      "excludeExternals": true,
      "includeDeclarations": false,
      "hideGenerator": true
  }
}
